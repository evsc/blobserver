<Blobserver>
    <Flow>
        <Actuator>
            <Type>Actuator_MirrorBall</Type>
            <Param>
                <Name>sphereDiameter</Name>
                <Value>50</Value>
            </Param>
            <Param>
                <Name>sphere</Name>
                <Value>320 240 240</Value>
            </Param>
            <Param>
                <Name>distance</Name>
                <Value>100</Value>
            </Param>
        </Actuator>
        <Source>
            <Type>Source_2D_OpenCV</Type>
            <Subsource>300</Subsource>
            <Param>
                <Name>framerate</Name>
                <Value>15</Value>
            </Param>
            <Param>
                <Name>iso</Name>
                <Value>400</Value>
            </Param>
            <Param>
                <Name>width</Name>
                <Value>640</Value>
            </Param>
            <Param>
                <Name>height</Name>
                <Value>480</Value>
            </Param>
            <Param>
                <Name>autoExposure</Name>
                <Value>300 200 80 40 127 32 0.05</Value>
            </Param>
            <Param>
                <Name>whiteBalanceRed</Name>
                <Value>512</Value>
            </Param>
            <Param>
                <Name>whiteBalanceBlue</Name>
                <Value>512</Value>
            </Param>
        </Source>
        <Client>
            <Address>localhost</Address>
            <Port>9000</Port>
        </Client>
        <Server>
            <Address>localhost</Address>
            <Port>9002</Port>
        </Server>
    </Flow>
</Blobserver>
