<Blobserver>
    <Flow>
        <Actuator>
            <Type>Actuator_DepthTouch</Type>
            <Param>
                <Name>verbose</Name>
                <Value>1</Value>
            </Param>
            <Param>
                <Name>detectionDistance</Name>
                <Value>100</Value>
            </Param>
            <Param>
                <Name>stddevCoeff</Name>
                <Value>20</Value>
            </Param>
            <Param>
                <Name>filterSize</Name>
                <Value>3</Value>
            </Param>
            <Param>
                <Name>learningTime</Name>
                <Value>128</Value>
            </Param>
        </Actuator>
        <Source>
            <Type>Source_2D_Shmdata</Type>
            <Subsource>0</Subsource>
            <Param>
                <Name>location</Name>
                <Value>/tmp/cam0-depth</Value>
            </Param>
            <Param>
                <Name>noiseFiltering</Name>
                <Value>1</Value>
            </Param>
        </Source>
        <Client>
            <Address>localhost</Address>
            <Port>9000</Port>
        </Client>
        <Server>
            <Address>localhost</Address>
            <Port>9002</Port>
        </Server>
    </Flow>
    <Flow>
        <Actuator>
            <Type>Actuator_FiducialTracker</Type>
        </Actuator>
        <Source>
            <Type>Source_2D_Shmdata</Type>
            <Subsource>1</Subsource>
            <Param>
                <Name>location</Name>
                <Value>/tmp/cam0-rgb</Value>
            </Param>
        </Source>
    </Flow>
</Blobserver>
